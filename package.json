{
  "name": "@vigour-io/play-css-reset",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.css",
  "scripts": {
    "test": "stylelint **/**/*.css -i .gitignore",
    "dev": "TYPE=$npm_config_type && TYPE=${TYPE:-main} && budo ./test/$TYPE/index.js:bundle.js -d ./test/$TYPE -d ./node_modules/@vigour-io/boilerplate-app/device/default --css test/$TYPE/bundle.css --pushstate --live",
    "browserstack": "browserify node_modules/browserstack-tape-reporter test -o test/bundle.js && cd test && browserstack-runner | tap-difflet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vigour-io/play-css-reset.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vigour-io/play-css-reset/issues"
  },
  "dependencies": {
    "postcssify": "^2.1.1"
  },
  "devDependencies": {
    "browserstack-tape-reporter": "^1.1.0",
    "browserstack-runner": "^0.4.4",
    "stylelint-config-standard": "^12.0.0",
    "tap-difflet": "0.4.0",
    "pre-commit": "^1.1.3",
    "stylelint": "^7.1.0",
    "tape": "^4.6.0",
    "budo": "^8.2.2"
  },
  "contributors": [
    "Youri Daamen <youri@vigour.io>"
  ],
  "homepage": "https://github.com/vigour-io/play-css-reset#readme",
  "browserify": {
    "transform": [
      "postcssify"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
